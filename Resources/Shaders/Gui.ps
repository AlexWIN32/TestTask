#include "Gui.fxh"

Texture2D colorTex :register(t0);
SamplerState colorSampler :register(s0);

float4 ProcessPixel(GsOutPsIn Input) : SV_TARGET
{ 
    return colorTex.Sample(colorSampler, Input.texCoord) * Input.color;
}